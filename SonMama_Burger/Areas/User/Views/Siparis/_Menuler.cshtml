
@using SonMama_Burger.Models.Entitites;
@using SonMama_Burger.Models.Enum
@using SonMama_Burger.VM
@model SiparisOlusturVM
@{
	decimal BoyutCarpani = 1;
	if (Model.Boyut == Boyut.Buyuk) BoyutCarpani = 1.4M;
	else if (Model.Boyut == Boyut.Orta) BoyutCarpani = 1.2M;
}

<div>
	<table class="table table-hover table-primary table-striped">

		<tr>
			<th>Menü Adı</th>
			<th>Fiyat</th>
			<th></th>
		</tr>
		@foreach (Menu menu in Model.Menuler)
		{
			<tr>
				<td>@menu.Adi</td>
				@{
					decimal fiyat = menu.Fiyat * BoyutCarpani;
				}
				<td>@fiyat</td>
				<td>
					<input type="radio" name="menuID" value="@menu.ID" />
				</td>
			</tr>
			<div class="product">
				@*<img class="img-fluid" src="data:image/jpeg;base64,(menu.Fotograf)">*@
				<div class="product-info">
					<h4 class="product-title">
					@menu.Adi
					</h4>
					<p class="product-price">@menu.Fiyat</p>
					<a class="product-btn" href="#">Sepete Ekle</a>
				</div>
			</div>
		}
	</table>
</div>