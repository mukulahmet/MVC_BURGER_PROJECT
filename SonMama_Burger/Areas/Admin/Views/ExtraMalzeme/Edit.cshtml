@using SonMama_Burger.VM.ExtraMalzemeVM;
@using SonMama_Burger.Models.Enum;

@model UpdateExtraMalzemeVM
@{
    ViewData["Title"] = "Edit";
}
<div class="col-lg-6 offset-5 grid margin stretch-card" style="width: 350px">
    <div class="card">
        <div class="card-header">
            <div class="card-body">
                <form asp-controller="ExtraMalzeme" asp-action="Edit" method="post">
                    <h4 class="card-title">Güncelle</h4>
                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="Adi" class="control-label">Adı</label>
                        <input type="text" style="width:250px" asp-for="Adi" class="form-control" />
                        <span asp-validation-for="Adi" class="text-danger"></span>
                        <br />
                        <label asp-for="Fiyat" class="control-label">Fiyatı</label>
                        <input type="text" style="width:250px" asp-for="Fiyat" class="form-control" />
                        <span asp-validation-for="Fiyat" class="text-danger"></span>
                        <br />
                        <label for="Cesit" class="control-label">Ekstra Malzeme Türü</label>
                        <select asp-for="Cesit" style="width:250px" asp-items="Html.GetEnumSelectList<Cesit>()" class="form-control">
                            <option value="">-- Seçiniz --</option>
                        </select>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="bg-danger text-white" asp-validation-summary="All"></div>


