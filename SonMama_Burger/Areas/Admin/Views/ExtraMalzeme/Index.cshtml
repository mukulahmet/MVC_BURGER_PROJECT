@using SonMama_Burger.Models.Entitites;
@using SonMama_Burger.Models.Enum;
@using SonMama_Burger.Areas.Admin.Controllers;
@model List<ExtraMalzeme>

<h1>Ekstra Malzemeler</h1>

<div class="col-lg-6 offset-3 grid-margin stretch-card">
    <div class="card">
        <div class="card-header">
            <div class="card-body">
                <h4 class="card-title">Ekstra Malzeme Listesi</h4>
                <br />
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ekstra Malzeme Adı</th>
                            <th>Fiyatı</th>
                            <th>Çeşidi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ExtraMalzeme extraMalzeme in Model)
                        {
                            <tr>
                                <td>
                                    @extraMalzeme.Adi
                                </td>
                                <td>
                                    @extraMalzeme.Fiyat ₺
                                </td>
                                <td>
                                    @extraMalzeme.Cesit
                                </td>
                                <td>
                                    <button class="btn btn-warning"><a asp-action="Edit" asp-controller="ExtraMalzeme" asp-area="Admin" asp-route-id="@extraMalzeme.ID">Düzenle</a></button> |
                                    <button class="btn btn-danger"><a asp-action="Delete" asp-controller="ExtraMalzeme" asp-area="Admin" asp-route-id="@extraMalzeme.ID">Sil</a></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />
    <p>
        <a class="btn btn-success d-flex align-items-start justify-content-center text-white" asp-action="Create">Yeni Ekstra Malzeme Ekle</a>
    </p>
</div>

